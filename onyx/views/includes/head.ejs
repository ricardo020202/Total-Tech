<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <!-- CSS Bootsrap -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous"
        />
        <link rel="stylesheet" href="/css/style.css" />
        <link rel="stylesheet" href="/css/entrenamientos_dietas.css" />
        <!-- <link rel="stylesheet" href="../css/adminStyle.css"> -->
        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@500&display=swap"
            rel="stylesheet"
        />

        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=DM+Sans&display=swap"
            rel="stylesheet"
        />

        <!-- Font Awesome -->

        <script src="/js/script.js" defer></script>

        <link rel="shortcut icon" href="assets/favicon.ico" type="image/x-icon">

        <title><%= pagetitle%></title>
    </head>

    <body>
        <header>
            <div class="fixed-top">
                <div class="rectangulo"></div>
                <div class="rectangulo1"></div>
                <div class="rectangulo2"></div>
            </div>
            <nav
                class="navbar navbar-expand-lg bg-custom navbar-light fixed-top"
            >
                <div class="container-fluid ms-5">
                    <a class="navbar-brand ms-3" href="/onyx">ONYX</a>
                    <button
                        class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation"
                    >
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div
                        class="collapse navbar-collapse"
                        id="navbarSupportedContent"
                    >
                        <ul class="navbar-nav mb-2 mb-lg-0 ms-2">
                            <li id="navbaritem" class="nav-item">
                                <a
                                    class="nav-link"
                                    aria-current="page"
                                    href="/onyx"
                                    id="navbarDropdown"
                                    >Home</a
                                >
                            </li>
                            <li id="navbaritem" class="nav-item dropdown">
                                <a
                                    class="nav-link dropdown-toggle wk-css"
                                    href="#"
                                    role="button"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false"
                                    id="navbarDropdown"
                                >
                                    Workouts
                                </a>
                                <ul class="dropdown-menu">
                                    <li id="navbaritem">
                                        <a
                                            class="dropdown-item"
                                            href="/onyx/catejercicios"
                                            id="navbarDropdown"
                                            >Catalogo de ejercicios</a
                                        >
                                    </li>
                                    <li id="navbaritem">
                                        <a
                                            class="dropdown-item"
                                            href="/onyx/catentrenamientos"
                                            id="navbarDropdown"
                                            >Catalogo de entrenamientos</a
                                        >
                                    </li>
                                </ul>
                            </li>
                            <li id="navbaritem" class="nav-item">
                                <a class="nav-link" href="/onyx/dietas"
                                id="navbarDropdown"
                                    >Dietas</a
                                >
                            </li>
                            <li id="navbaritem" class="nav-item">
                                <a class="nav-link" href="/onyx/bitacora"
                                id="navbarDropdown"
                                    >Bit√°cora</a
                                >
                            </li>
                            <li id="navbaritem" class="nav-item">
                                <a class="nav-link" href="/onyx/dashboard"
                                id="navbarDropdown"
                                    >Dashboard</a
                                >
                            </li>
                            <li id="navbaritem" class="nav-item">
                                <a class="nav-link" href="/onyx/favoritos"
                                id="navbarDropdown"
                                    >Favoritos</a
                                >
                            </li>
                        </ul>
                        <% if (user){ %>
                            <% if (rol !== "cliente") { %>
                                <ul class="navbar-nav mb-2 mb-lg-0 ms-2">
                                    <li class="nav-item">
                                        <a class="nav-link" href="/admin/adminDashboard"
                                            ><%= rol %></a
                                        >
                                    </li>
                                </ul>
                                <% } %>
                        <li id="navbaritem"  class="nav-item dropdown">
                            <a
                                class="nav-link dropdown-toggle text-dark"
                                href="#"
                                role="button"
                                data-bs-toggle="dropdown"
                                aria-expanded="false"
                            >
                                <img
                                    src="/uploads/<%= photo %>"
                                    alt="user"
                                    class="rounded-circle"
                                    style="width: 30px; height: 30px"
                                />
                                Hola, <strong><%= user %></strong>
                            </a>
                            <ul class="dropdown-menu">
                                <li id="navbaritem">
                                    <a
                                        class="dropdown-item"
                                        href="/onyx/cuenta"
                                    >
                                        <img
                                            src="/uploads/<%= photo%>"
                                            alt="user"
                                            class="me-2 rounded-circle"
                                            style="width: 30px; height: 30px"
                                        />
                                        Cuenta</a
                                    >
                                </li>
                                <li id="navbaritem">
                                    <a
                                        class="dropdown-item"
                                        href="/onyx/datos-iniciales"
                                        >Datos iniciales</a
                                    >
                                </li>
                                <li id="navbaritem">
                                    <a class="dropdown-item" href="/onyx/tallas"
                                        >Tallas</a
                                    >
                                </li>
                            </ul>
                        </li>
                        <a
                            class="btn btn-light rounded-pill text-dark"
                            id="botonlogout"
                            aria-current="page"
                            href="/users/logout"
                            ><strong>Log out</strong></a
                        >
                        <%} else { %>
                        <a
                            class="nav-link active text-dark"
                            aria-current="page"
                            href="/users/login"
                            id="navbarDropdown"
                            ><strong>Log in</strong></a
                        >
                        <a
                            class="btn btn-light rounded-pill text-dark"
                            id="botonsignup"
                            aria-current="page"
                            href="/users/signUp"
                            ><strong>Sign up</strong></a
                        >
                        <% } %>
                    </div>
                </div>
            </nav>
        </header>

        <main></main>
    </body>
</html>
