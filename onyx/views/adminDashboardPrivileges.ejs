<link rel="stylesheet" href="/css/adminStyle.css">
<style>
  /* Add some margin and padding to the table */
  body {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-size: 16px;
  }

  table {
    margin: 1rem 0;
    padding: 0;
  }

  /* Add some font size and weight to the table header */
  thead th {
    font-size: 1.2rem;
    font-weight: bold;
  }

  /* Add some font size to the table cells */
  tbody td {
    font-size: 1rem;
  }

  /* Style the table header */
  .thead-dark th {
    background-color: #343a40;
    color: #fff;
  }

  /* Style the table rows */
  tbody tr:nth-of-type(even) {
    background-color: #f8f9fa;
  }
</style>
    <div class="spacer"></div>
    <div class="container">
      <div class="row">
        <div class="col-3">
        </div>
        <div class="col">
          <div class="form-group">
            <input type="text" class="form-control" id="searchInput" placeholder="Buscar usuarios...">
          </div>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead class="thead-dark">
                <tr>
                  <th>Nombre programa</th>
                  <th>Descripci√≥n programa</th>
                  <th>Frecuencia</th>
                  <th>Modificar</th>
                </tr>
              </thead>
              <tbody>
                <% usersArray.forEach(user=> { %>
                  <tr>
                    <td>
                      <%= user.nombre %>
                    </td>
                    <td>
                      <%= user.email %>
                    </td>
                    <td>
                      <%= user.telefono %>
                    </td>
                    <td>
                      <span class="user-role" data-toggle="tooltip" data-bs-placement="top"
                        title="<%= user.privileges %>">
                        <%= user.rol %>
                      </span>
                    </td>
                    <td>
                      <button>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
