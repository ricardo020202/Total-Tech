<%- include('includes/head.ejs') %> <%- include('includes/sidebar.ejs') %>

<link rel="stylesheet" href="/css/adminStyle.css" />
<div class="table-responsive">
    <div class="table-title">
        <div class="row">
        <div class="col-sm-6">
            <h2><b>Usuarios</b></h2>
        </div>
        <div class="col-sm-6">
            <a href="/admin/admindashboard/usuarios/nuevousuario" class="btn btn-success"><i class="material-icons"></i> <span>Agregar Nuevo Usuario</span></a>
        </div>
        </div>
    </div>
    <table class="table-active table-striped">
        <thead class="table-header">
            <tr>
                <th scope="col">Nombre de usuario</th>
                <th scope="col">Email</th>
                <th scope="col">Telefono</th>
                <th scope="col">Rol</th>
            </tr>
                    </thead>
                    <tbody>
                        <% usersArray.forEach(user=> { %>
                        <tr>
                            <td><%= user.nombre %></td>
                            <td><%= user.email %></td>
                            <td><%= user.telefono %></td>
                            <td>
                                <span
                                    class="user-role"
                                    data-toggle="tooltip"
                                    data-bs-placement="top"
                                    title="<%= user.privileges %>"
                                >
                                    <%= user.rol %>
                                </span>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>

<script>
    $(document).ready(function () {
        $('[data-bs-toggle="tooltip"]').tooltip();
        $("#searchInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("tbody tr").filter(function () {
                $(this).toggle(
                    $(this).text().toLowerCase().indexOf(value) > -1
                );
            });
        });
    });
</script>
