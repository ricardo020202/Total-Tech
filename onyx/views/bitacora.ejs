<%- include('includes/head.ejs') %>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <div class="container">
        <div class="container mt-5">
            <br />
            <br />
            <h1 class="fw-bold text-start">Bitácora</h1>
            <p class="lead text-start">
                Aquí podrás ver que día realizaste ejercicio y como te sentiste ese
                día, además de llevar un control de tus entrenamientos
            </p>
        </div>

        <!-- calendario de bitacora -->
        <!-- two columns -->
        <div class="row calendario-bitacora">
            <div class="col-md-6">
                <div class="wrapper">
                    <header>
                        <p class="current-date"></p>
                        <div class="icons">
                            <span id="prev" class="material-symbols-rounded">chevron_left</span>
                            <span id="next" class="material-symbols-rounded">chevron_right</span>
                        </div>
                    </header>
                    <div class="calendar">
                        <ul class="weeks">
                            <li>Sun</li>
                            <li>Mon</li>
                            <li>Tue</li>
                            <li>Wed</li>
                            <li>Thu</li>
                            <li>Fri</li>
                            <li>Sat</li>
                        </ul>
                        <ul class="days"></ul>
                    </div>
                </div>
            </div>
            <div class="col">
                <% for (let i=0; i < bitacora.length; i++) { %>
                    <!-- tarjetas con los eventos -->
                    <div class="cards text-center <% if (i === 0) { %>active<% } %>" style="width: 18rem">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= bitacora[i].entreno %>
                            </h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                <%= new Date(bitacora[i].fecha).toLocaleDateString() %>
                            </h6>
                            <p class="card-text">
                                <%= bitacora[i].contenido %>
                            </p>
                            <form method="post" action="/onyx/bitacora/delete/<%= bitacora[i].id_bitacora %>">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                                <button type="submit" class="btn btn-danger" id="delete-bitacora">
                                    Borrar
                                </button>
                            </form>
                        </div>
                    </div>
                    <% } %>
            </div>
            <div class="col d-flex mt-5 my-5">
                <div class="add-event">
                    <a href="/onyx/nuevabitacora">
                        <button class="btn btn-primary" id="add-event">
                            <span class="material-symbols-rounded">add</span>
                        </button>
                    </a>
                </div>
            </div>
        </div>



        <div class="row">
            <div class="container mt-3">
                <br />
                <br />
                <h1 class="fw-bold text-start">Registros más recientes</h1>
                <p class="lead text-start">
                    Aquí podrás ver los 10 registros más recientes de tu bitácora
                </p>
            </div>
            <table class="table table-hover text-center">
                <thead>
                    <tr>
                        <th scope="col">Fecha</th>
                        <th scope="col">Entreno</th>
                        <th scope="col">Contenido</th>
                        <th scope="col">Opciones</th>
                    </tr>
                </thead>
                <tbody class="table-dark">
                    <% for (let i=0; i < bit10.length; i++) { %>
                        <tr>
                            <td>
                                <%= new Date(bit10[i].fecha).toLocaleDateString() %>
                            </td>
                            <td>
                                <%= bit10[i].entreno %>
                            </td>
                            <td>
                                <%= bit10[i].contenido %>
                            </td>

                            <!-- more options dropdown bootstrap three dots -->
                            <td>
                                <div class="d-flex justify-content-center">
                                    <div class="dropdown">
                                            <li>
                                                <form method="post"
                                                    action="/onyx/bitacora/delete/<%= bit10[i].id_bitacora %>">
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                                                    <button type="submit" class="btn btn-danger" id="delete-bitacora">
                                                        Borrar
                                                    </button>
                                                </form>
                                            </li>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
    </div>
    <%- include('includes/foot.ejs') %>