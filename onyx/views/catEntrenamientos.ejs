<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

    <div class="container">
        <div class="spacer">
        </div>

        <div class="container">
            <h2 id="titulopagina">PROGRAMAS PARA TI</h2>

        </div>

        <div class="container text-center">
            <div class="row align-items-start">
                <% for (let i=0; i < programa.length; i++) { %>
                    <% if (programa[i].id_programa !==1) { %>
                        <div class="col">
                            <div class="cards" style="width: 18rem;">
                                <img style="object-fit: cover;" src="/uploads/<%= programa[i].img_programa %>"
                                    class="card-img-top" alt="<%= programa[i].ref_visual%>">
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <%= programa[i].nombre_programa%>
                                    </h4>
                                    <p style="text-align: left;" class="card-text">Frecuencia: <%=
                                            programa[i].frecuencia%> veces a la semana
                                    </p>
                                    <!-- que va a hacer el boton start -->
                                    <a href="/onyx/programa/<%= programa[i].id_programa%>" id="btnstart"
                                        class="btn btn-primary">EMPEZAR</a>
                                    <br>
                                    <% if (favoritos.includes(programa[i].id_programa)) {%>
                                        <a href="/onyx/favoritos/delete/1/<%= programa[i].id_programa%>/programa"
                                            class="fav"><i class="bi bi-star-fill"></i></a>
                                        <% } else { %>
                                            <a href="/onyx/favoritos/add/1/<%= programa[i].id_programa%>/programa"
                                                class="fav"><i class="bi bi-star"></i></a>
                                            <% } %>
                                </div>
                            </div>
                        </div>
                        <% } %>
                            <% } %>
            </div>

        </div>

        <br>

        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <%let contador=0;%>
                    <% for (let i=1; i <=Math.ceil(total_programas/9); i++) { %>
                        <li class="page-item"><a class="page-link" href="/onyx/catentrenamientos/<%=contador%>">
                                <%= i %>
                            </a></li>
                        <%contador +=9;%>

                            <%}%>
            </ul>
        </nav>

    </div>
    <%- include('includes/foot.ejs') %>